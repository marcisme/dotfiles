[core]
  excludesfile = ~/.gitignore
  editor = /usr/local/bin/mvim -v
  whitespace = tab-in-indent
[color]
  ui = auto
[merge]
  tool = mvimdiff
[alias]
  c = commit
  ca = commit --amend
  caf = commit --amend -C HEAD
  co = checkout
  cp = !git commit -m 'checkpoint'
  cpa = !git add . && git commit -m 'checkpoint'
  s = status
  sh = show
  a = add
  l = log origin/main..
  la = log
  lo = log --oneline origin/main..
  loa = log --oneline
  lg = log --graph origin/main..
  lga = log --graph
  ln = log --oneline --name-status origin/main..
  lna = log --oneline --name-status
  t = tag
  b = branch
  d = diff
  dc = diff --cached
  r = reset
  re = !git rebase -i $(git merge-base origin HEAD)
  f = fetch
  pr = pull --rebase
  tfo = !git reset --hard && git clean -fd
  prune = remote update --prune
[push]
  default = current
[include]
  path = .gitconfig.local
[init]
  defaultBranch = main
